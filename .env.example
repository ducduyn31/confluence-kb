# Confluence API settings
CONFLUENCE_URL=https://yourcompany.atlassian.net
CONFLUENCE_USERNAME=your-email@example.com
CONFLUENCE_API_TOKEN=your-api-token
CONFLUENCE_VERIFY_SSL=true

# Kafka settings
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_RAW_TOPIC=raw-confluence-data
KAFKA_PROCESSED_TOPIC=processed-text
KAFKA_CHUNKS_TOPIC=text-chunks
KAFKA_EMBEDDINGS_TOPIC=embeddings
KAFKA_VERSION_TOPIC=version-metadata

# Flink settings
FLINK_JOB_MANAGER_URL=localhost:8081
FLINK_CHECKPOINT_DIR=./data/checkpoints
FLINK_PARALLELISM=1

# PostgreSQL settings
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=confluence_kb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-password
POSTGRES_MIN_CONNECTIONS=1
POSTGRES_MAX_CONNECTIONS=10

# Application settings
DATA_DIR=./data
LOG_LEVEL=INFO

# Document Intelligence settings
DOCUMENT_INTELLIGENCE_ENDPOINT=your-document-intelligence-endpoint